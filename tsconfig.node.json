{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,

    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "preserveValueImports": false,

    "composite": true,
    "noEmit": false
  },
  "include": ["vite.config.ts"]
}
