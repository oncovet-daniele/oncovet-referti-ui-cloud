{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "allowJs": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "target": "ES2020",
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "strict": false
  },
  "include": ["src"]
}
